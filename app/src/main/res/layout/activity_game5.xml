<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.memoryexcercise.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="깜박이는 문자를\n기억하세요"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/gameExplain"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:text=" "
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
         />

    <TextView
        android:id="@+id/text0"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:text=" "
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text1"
        android:layout_marginRight="5dp"
         />

    <TextView
        android:id="@+id/text2"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:text=" "
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        android:layout_marginLeft="5dp"
         />

    <TextView
        android:id="@+id/textCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="120sp"
        android:visibility="gone"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <GridLayout
        android:id="@+id/ansGrid"
        android:visibility="gone"
        android:layout_width="292dp"
        android:layout_height="182dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696">

        <Button
            android:id="@+id/ansBtn0"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"

            android:layout_row="0"
            android:layout_column="0"

            android:text="ABC"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ansBtn1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"

            android:layout_row="0"
            android:layout_column="1"

            android:text="ABC"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ansBtn2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"

            android:layout_row="1"
            android:layout_column="0"

            android:text="ABC"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ansBtn3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"

            android:layout_row="1"
            android:layout_column="1"

            android:text="ABC"
            android:textSize="40sp" />

    </GridLayout>

    <EditText
        android:id="@+id/underLine"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:cursorVisible="false"
        android:enabled="false"

        android:ems="10"
        android:inputType="none"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.5" />


</android.support.constraint.ConstraintLayout>
